FROM maven:3.8.2-jdk-11 AS builder
RUN apt-get update && apt-get install git
RUN git clone https://github.com/theogiraudet/HACK-F-Back.git
COPY --from=git HACK-F-Back/src/ src/
COPY --from=git HACK-F-Back/.mvn/ .mvn/
COPY --from=git HACK-F-Back/pom.xml .
COPY --from=git HACK-F-Back/mvnw .
COPY --from=git HACK-F-Back/mvnw.cmd .
#RUN mvn -quiet -DskipTests package
RUN mvn -DskipTests package

FROM openjdk:11
COPY --from=builder target/*.jar app.jar
COPY deploy/config.properties .

EXPOSE 8080
ENTRYPOINT ["java","-jar","app.jar"]
#ENTRYPOINT ["tail", "-f", "/dev/null"]